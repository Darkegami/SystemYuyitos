        xmlns:local="clr-namespace:SystemYuyitos"
        mc:Ignorable="d"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:behaviours="clr-namespace:MahApps.Metro.Behaviours;assembly=MahApps.Metro"
        Title="Registro_Orden_Compra" Height="596" Width="934.668">
    <Grid Background="DarkGray" Margin="0,0,0,-1">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="0*"/>
        </Grid.RowDefinitions>
        <Label x:Name="label" Content="Proveedor:" HorizontalAlignment="Left" Margin="51,48,0,0" VerticalAlignment="Top" OpacityMask="Black" Foreground="White" Height="26" Width="67"/>
