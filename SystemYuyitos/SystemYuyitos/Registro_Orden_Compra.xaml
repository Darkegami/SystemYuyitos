        <Button x:Name="ingresarProducto" Content="Ingresar Producto" HorizontalAlignment="Left" Margin="246,148,0,0" VerticalAlignment="Top" Width="126" Height="24" RenderTransformOrigin="0.509,0.448" Click="ingresarProducto_Click"/>
        <Button x:Name="button1" Content="Eliminar Producto" HorizontalAlignment="Left" Margin="377,148,0,0" VerticalAlignment="Top" Width="124" Height="24" RenderTransformOrigin="0.489,0.49"/>
        <Button x:Name="button2" Content="Crear Orden" HorizontalAlignment="Left" Margin="410,372,0,0" VerticalAlignment="Top" Width="91" Height="26"/>
        <Label x:Name="label_Copy3" Content="N° Orden Compra:" HorizontalAlignment="Left" Margin="57,438,0,0" VerticalAlignment="Top" OpacityMask="Black" Foreground="White" RenderTransformOrigin="0.8,0.498" Height="26" Width="108"/>
        <Button x:Name="button3" Content="Visualizar orden" HorizontalAlignment="Left" Margin="294,440,0,0" VerticalAlignment="Top" Width="111" Height="26"/>
        <Button x:Name="button4" Content="MODIFICAR ORDEN" HorizontalAlignment="Left" Margin="410,440,0,0" VerticalAlignment="Top" Width="114" Height="26"/>
        <Button x:Name="button5" Content="Eliminar ORDEN" HorizontalAlignment="Left" Margin="529,440,0,0" VerticalAlignment="Top" Width="114" RenderTransformOrigin="0.185,-0.046" Height="26"/>
        <Button x:Name="button6" Content="Ver INVENTARIO" HorizontalAlignment="Left" Margin="56,372,0,0" VerticalAlignment="Top" Width="110" Height="26"/>
        <Image x:Name="image" HorizontalAlignment="Left" Height="66" Margin="741,12,0,0" VerticalAlignment="Top" Width="114" Source="Imagenes/almacen.png"/>
        <Label x:Name="label_Copy4" Content="Familia:" HorizontalAlignment="Left" Margin="54,84,0,0" VerticalAlignment="Top" OpacityMask="Black" Foreground="White" Height="26" Width="67"/>
        <ComboBox x:Name="cboFamilia" HorizontalAlignment="Left" Margin="123,84,0,0" VerticalAlignment="Top" Width="120" Height="26"/>
        <DataGrid x:Name="dataGrid1" HorizontalAlignment="Left" Margin="539,180,0,0" VerticalAlignment="Top" Height="187" Width="343">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="N° Orden"/>
                <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Fecha Orden"/>
                <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Valor Total"/>
                <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Estado"/>
            </DataGrid.Columns>
        </DataGrid>
        <TextBox x:Name="textBox1" HorizontalAlignment="Left" Height="23" Margin="165,439,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnVolver1" 
            Style="{DynamicResource MahApps.Metro.Styles.MetroCircleButtonStyle}"
            BorderBrush="Transparent"
            ToolTip="Volver a Menú" Click="BtnVolver_Click" Margin="10,490,822,20">
            <Image Source="Imagenes/baaaack.png" Width="55" Height="55" Stretch="Fill" />
        </Button>
    </Grid>
    </Controls:MetroWindow>

