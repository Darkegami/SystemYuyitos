        <ComboBox x:Name="cboProveedor" HorizontalAlignment="Left" Margin="123,52,0,0" VerticalAlignment="Top" Width="120" Height="26"/>
        <DataGrid x:Name="dgGrillaProducto" HorizontalAlignment="Left" Margin="56,180,0,0" VerticalAlignment="Top" Height="187" Width="445">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Proveedor"/>
                <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Producto"/>
                <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Cantidadxpack"/>
                <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Valor"/>
            </DataGrid.Columns>
        </DataGrid>
        <ComboBox x:Name="cboProducto" HorizontalAlignment="Left" Margin="123,118,0,0" VerticalAlignment="Top" Width="120" Height="26"/>
        <Label x:Name="label_Copy1" Content="Cantidad:" HorizontalAlignment="Left" Margin="54,146,0,0" VerticalAlignment="Top" OpacityMask="Black" Foreground="White" RenderTransformOrigin="0.8,0.498" Height="26" Width="60"/>
